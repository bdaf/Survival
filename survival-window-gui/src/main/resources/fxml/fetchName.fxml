<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="350.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>
    <bottom>
        <Button fx:id="playButton" mnemonicParsing="false" text="Play" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin></Button>
    </bottom>
    <top>
        <Label text="Type your username" BorderPane.alignment="CENTER">
            <font>
                <Font name="Engravers MT" size="33.0" />
            </font>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
        </Label>
    </top>
   <center>
      <TextField fx:id="usernameTextField" alignment="CENTER" style="-fx-text-inner-color: #B80000;" BorderPane.alignment="CENTER">
         <font>
            <Font name="Agency FB" size="26.0" />
         </font>
         <BorderPane.margin>
            <Insets left="150.0" right="150.0" />
         </BorderPane.margin>
      </TextField>
   </center>
</BorderPane>
